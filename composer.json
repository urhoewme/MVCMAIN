{
    "name": "urhoe/mvcshka",
    "autoload": {
        "psr-4": {
            "app\\": "./"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.5",
      "ext-pdo": "*",
        "twig/twig": "^3.6",
      "ext-curl": "*"
    },
  "scripts": {
    "post-install-cmd": "@prepare",
    "migrations": "php ./system/migrations.php",
    "seed": "php ./system/seeder.php",
    "localhost": "php -t ./public -S localhost:8080",
    "env": "cp -n .env-example .env",
    "prepare": [
      "@env",
      "@migrations",
      "@seed"
    ]
  }
}
